<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.example.pis2020.domain.User" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.fragments.PuntuacionFragment">

            <TextView
                android:id="@+id/titulo_puntuacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/carter_one"
                android:textColor="#000000"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/titulo_puntuacion" />

            <TextView
                android:id="@+id/texto_proteinas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/texto_proteinas"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/resultado_proteinas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titulo_puntuacion" />

            <TextView
                android:id="@+id/texto_hidratos_carbono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/texto_hidratos_carbono"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/resultado_hidratos_carbono"
                app:layout_constraintStart_toStartOf="@+id/texto_proteinas"
                app:layout_constraintTop_toBottomOf="@+id/texto_proteinas" />

            <TextView
                android:id="@+id/texto_grasas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/texto_grasas"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/resultado_grasas"
                app:layout_constraintStart_toStartOf="@+id/texto_azucar"
                app:layout_constraintTop_toBottomOf="@+id/texto_azucar" />

            <TextView
                android:id="@+id/texto_grasas_saturadas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/texto_grasas_saturadas"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/resultado_grasas_saturadas"
                app:layout_constraintStart_toStartOf="@+id/texto_grasas"
                app:layout_constraintTop_toBottomOf="@+id/texto_grasas" />

            <TextView
                android:id="@+id/texto_sodio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/texto_sodio"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/resultado_sodio"
                app:layout_constraintStart_toStartOf="@+id/texto_grasas_saturadas"
                app:layout_constraintTop_toBottomOf="@+id/texto_grasas_saturadas" />

            <TextView
                android:id="@+id/texto_azucar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/texto_hidratos_azucares"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/resultado_azucar"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/texto_hidratos_carbono"
                app:layout_constraintTop_toBottomOf="@+id/texto_hidratos_carbono" />

            <TextView
                android:id="@+id/resultado_proteinas"
                setNutriment="@{user.proteins}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/texto_proteinas"
                tools:text="30g" />

            <TextView
                android:id="@+id/resultado_hidratos_carbono"
                setNutriment="@{user.hidratsCarb}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/resultado_proteinas"
                app:layout_constraintTop_toTopOf="@+id/texto_hidratos_carbono"
                tools:text="56g" />

            <TextView
                android:id="@+id/resultado_azucar"
                setNutriment="@{user.sugars}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/resultado_hidratos_carbono"
                app:layout_constraintTop_toTopOf="@+id/texto_azucar"
                tools:text="30g" />

            <TextView
                android:id="@+id/resultado_grasas"
                setNutriment="@{user.fats}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/resultado_hidratos_carbono"
                app:layout_constraintTop_toTopOf="@+id/texto_grasas"
                tools:text="70g" />

            <TextView
                android:id="@+id/resultado_grasas_saturadas"
                setNutriment="@{user.saturedFats}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/resultado_grasas"
                app:layout_constraintTop_toTopOf="@+id/texto_grasas_saturadas"
                tools:text="40g" />

            <TextView
                android:id="@+id/resultado_sodio"
                setNutriment="@{user.sodium}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/resultado_grasas_saturadas"
                app:layout_constraintTop_toTopOf="@+id/texto_sodio"
                tools:text="50g" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/texto_sodio" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mostrar_grafico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/boton_texto_mostrar_grafico"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/texto_sodio" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>