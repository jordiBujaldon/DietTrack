<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/Layout_producte"
            android:layout_width="match_parent"
            android:layout_height="372dp"
            android:background="@drawable/corvaperfil"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ColaCao_image"
                android:layout_width="match_parent"
                android:layout_height="211dp"
                android:scaleType="center"
                android:scaleX="2"
                android:scaleY="2"
                app:srcCompat="@mipmap/ic_launcher_foreground"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/ProductNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="@string/colacao_el_original"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="30sp"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/BrandText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/cola_cao"
                android:textAlignment="center"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/puntuacionProgressBar"
                        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:max="100"
                        android:progress="30"

                        android:scrollbarThumbHorizontal="@color/colorAccent" />

                    <TextView
                        android:id="@+id/puntuacionNumericaText"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/_30_100" />

                </LinearLayout>

                <TextView
                    android:id="@+id/puntuacionText"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@drawable/text_view_cercle"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="@string/mediocre"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_background"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_valors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Layout_negatiu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_Negatius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Negativo"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cada100g"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        android:gravity="bottom|right"
                        android:text="Cada 100 g"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

                <LinearLayout
                    android:id="@+id/Layaout_valors_negatius"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/valor_energetico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="Valor energético"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/kCals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight=""
                            android:gravity="right"
                            android:text="68kCal" />

                    </LinearLayout>
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/azucar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="Azúcar"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/gramos_azucar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight=""
                            android:gravity="right"
                            android:text="9,1 g" />

                    </LinearLayout>
                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:id="@+id/Layout_positiu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_Positius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/positivo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        android:gravity="bottom|end"
                        android:text="@string/cada_100_g"
                        android:textSize="16sp"
                        android:layout_marginEnd="20dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

                <LinearLayout
                    android:id="@+id/Layaout_valors_positius"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/Sal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="@string/sal"
                            android:textSize="18sp"
                            android:layout_marginStart="30dp" />

                        <TextView
                            android:id="@+id/g_azucar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight=""
                            android:gravity="right"
                            android:text="@string/_0_12_g"
                            android:layout_marginEnd="20dp"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/grasas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="@string/grasas_saturadas"
                            android:textSize="18sp"
                            android:layout_marginStart="30dp"
                            />

                        <TextView
                            android:id="@+id/gramos_grasas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight=""
                            android:gravity="end"
                            android:text="@string/_1_1_g"
                            android:layout_marginEnd="20dp"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/proteinas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginLeft="30dp"
                            android:text="@string/proteinas"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/g_porteinas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight=""
                            android:gravity="right"
                            android:text="@string/_3_4_g"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>