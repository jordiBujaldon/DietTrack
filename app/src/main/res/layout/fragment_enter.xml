<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context=".activities.fragments.EnterFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonIniciarSesion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/magin_enter_buttons"
            android:layout_marginLeft="@dimen/magin_enter_buttons"
            android:layout_marginEnd="@dimen/magin_enter_buttons"
            android:layout_marginRight="@dimen/magin_enter_buttons"
            android:text="@string/boto_entrar"
            app:cornerRadius="@dimen/corner_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonRegistrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/boton_registrar"
            app:cornerRadius="@dimen/corner_button"
            app:layout_constraintEnd_toEndOf="@+id/botonIniciarSesion"
            app:layout_constraintStart_toStartOf="@+id/botonIniciarSesion"
            app:layout_constraintTop_toBottomOf="@+id/botonIniciarSesion" />

        <TextView
            android:id="@+id/textoIniciarInvitado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/texto_iniciar_invitado"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/botonRegistrar"
            app:layout_constraintStart_toStartOf="@+id/botonRegistrar"
            app:layout_constraintTop_toBottomOf="@+id/botonRegistrar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>