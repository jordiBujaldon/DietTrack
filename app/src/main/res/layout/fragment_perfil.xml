<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.example.pis2020.domain.User" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars"
                setImage="@{user.photo}"/>

            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                app:layout_constraintEnd_toEndOf="@id/profile_image"
                app:layout_constraintStart_toStartOf="@id/profile_image"
                tools:text="Projecte Integrat de Software"
                setText="@{user.username}"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/boton_cerrar_sesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/LogOutButton"
                android:text="@string/cerrar_sesion_boton"
                app:layout_constraintTop_toBottomOf="@id/username_text"
                app:layout_constraintStart_toStartOf="@id/profile_image"
                app:layout_constraintEnd_toEndOf="@id/profile_image"
                app:layout_constraintBottom_toTopOf="@id/segunda_parte_layout"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/segunda_parte_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/boton_cerrar_sesion"
                tools:layout_editor_absoluteX="109dp"
                tools:background="@drawable/profile_layout_shape_background"
                tools:elevation="8dp">

                <TextView
                    android:id="@+id/titulo_correo_electronico"
                    style="@style/TextProfileLayout1"
                    android:text="@string/texto_correo_electronico"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/usuario_correo_electronico"
                    style="@style/TextProfileLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/titulo_correo_electronico"
                    tools:text="corre@correo.com"
                    setText="@{user.email}"/>

                <TextView
                    android:id="@+id/titulo_fecha_nacimiento"
                    style="@style/TextProfileLayout1"
                    android:text="@string/fecha_de_nacimiento_texto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/usuario_correo_electronico"/>

                <TextView
                    android:id="@+id/usuario_fecha_nacimiento"
                    style="@style/TextProfileLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/titulo_fecha_nacimiento"
                    tools:text="00/00/0000"
                    setText="@{user.age}"/>

                <TextView
                    android:id="@+id/titulo_altura"
                    style="@style/TextProfileLayout1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/usuario_fecha_nacimiento"
                    android:text="@string/altura_texto" />

                <TextView
                    android:id="@+id/usuario_altura"
                    style="@style/TextProfileLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/titulo_altura"
                    tools:text="1.80"
                    doubleNumber="@{user.height}"/>

                <TextView
                    android:id="@+id/titulo_peso"
                    style="@style/TextProfileLayout1"
                    app:layout_constraintStart_toEndOf="@id/titulo_altura"
                    app:layout_constraintTop_toBottomOf="@id/usuario_fecha_nacimiento"
                    android:text="@string/peso_texto" />

                <TextView
                    android:id="@+id/usuario_peso"
                    style="@style/TextProfileLayout2"
                    app:layout_constraintStart_toEndOf="@id/titulo_altura"
                    app:layout_constraintTop_toBottomOf="@id/titulo_peso"
                    tools:text="70"
                    doubleNumber="@{user.weight}" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/boton_cambiarfoto"
                android:layout_width="49dp"
                android:layout_height="27dp"
                android:layout_marginTop="96dp"
                android:layout_marginEnd="129dp"
                android:layout_marginRight="129dp"
                android:text="Button"
                app:icon="@android:drawable/ic_menu_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>