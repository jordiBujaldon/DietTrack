<resources>

    <!-- Base application theme. -->
    <style name="Theme.DietTrack" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Theme.DietTrack.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.DietTrack">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="LogOutButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="TextProfileLayout1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextProfileLayout2" parent="TextProfileLayout1">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextFoodItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
